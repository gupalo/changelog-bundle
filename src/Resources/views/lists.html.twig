{% extends 'base.html.twig' %}

{% block body %}
<h2>Change Log List</h2>

<table class="table table-striped table-hover table-responsive-md table-sm dataTable"
       style="min-width: 20%">
    <thead class="thead-light">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">User</th>
        <th scope="col">Entity Name</th>
        <th scope="col">Entity Id</th>
        <th scope="col">Field</th>
        <th scope="col">Old Value</th>
        <th scope="col">Value</th>
        <th scope="col">Created At</th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td class="text-nowrap">{{ item.id }}</td>
            <td class="text-nowrap">{{ item.user ? item.user : '' }}</td>
            <td class="text-nowrap">{{ item.entity }}</td>
            <td class="text-nowrap">{{ item.entityId }}</td>
            <td class="text-nowrap">{{ item.field }}</td>
            <td class="text-nowrap">{{ item.oldValue }}</td>
            <td class="text-nowrap">{{ item.value }}</td>
            <td class="text-nowrap">{{ item.createdAt ? item.createdAt|date('Y-m-d H:i') : '-' }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
